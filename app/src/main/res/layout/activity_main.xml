<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_show_calculation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0F1311"
        android:gravity="end|center_vertical"
        android:padding="@dimen/extra_padding"
        tools:text="2134"
        android:textSize="@dimen/text_size_calc_24"
        app:layout_constraintBottom_toTopOf="@+id/tv_display_answer"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/tv_display_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/extra_margin"
        android:background="#0F1311"
        android:gravity="end|center_vertical"
        android:padding="@dimen/extra_padding"
        tools:text="2134"
        android:textSize="@dimen/text_size_calc_36sp"
        app:layout_constraintBottom_toTopOf="@+id/LL"
        tools:layout_editor_absoluteX="8dp" />

    <LinearLayout
        android:id="@+id/LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/standard_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_c"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_margin"
                android:padding="@dimen/padding_btn"
                android:text="@string/c"
                android:textSize="28sp" />

            <Button
                android:id="@+id/btn_percent"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_margin"
                android:padding="@dimen/padding_btn"
                android:text="@string/percent"
                android:textSize="28sp" />

            <Button
                android:id="@+id/btn_divide"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_margin"
                android:padding="@dimen/padding_btn"
                android:text="@string/divide"
                android:textSize="28sp" />

            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_margin">

                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/delete_text_svgrepo_com" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_7"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/standard_margin"
                        android:backgroundTint="#FAFAFF"
                        android:padding="@dimen/padding_btn"
                        android:text="@string/_7"
                        android:textColor="@color/black"
                        android:textSize="28sp" />

                    <Button
                        android:id="@+id/btn_8"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/standard_margin"
                        android:backgroundTint="#FAFAFF"
                        android:padding="@dimen/padding_btn"
                        android:text="@string/_8"
                        android:textColor="@color/black"
                        android:textSize="28sp" />

                    <Button
                        android:id="@+id/btn_9"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/standard_margin"
                        android:backgroundTint="#FAFAFF"
                        android:padding="@dimen/padding_btn"
                        android:text="@string/_9"
                        android:textColor="@color/black"
                        android:textSize="28sp" />

                    <Button
                        android:id="@+id/btn_multiply"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/standard_margin"
                        android:padding="@dimen/padding_btn"
                        android:text="@string/x"
                        android:textSize="28sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_4"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/standard_margin"
                        android:backgroundTint="#FAFAFF"
                        android:padding="@dimen/padding_btn"
                        android:text="@string/_4"
                        android:textColor="@color/black"
                        android:textSize="28sp" />

                    <Button
                        android:id="@+id/btn_5"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/standard_margin"
                        android:backgroundTint="#FAFAFF"
                        android:padding="@dimen/padding_btn"
                        android:text="@string/_5"
                        android:textColor="@color/black"
                        android:textSize="28sp" />

                    <Button
                        android:id="@+id/btn_6"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/standard_margin"
                        android:backgroundTint="#FAFAFF"
                        android:padding="@dimen/padding_btn"
                        android:text="@string/_6"
                        android:textColor="@color/black"
                        android:textSize="28sp" />

                    <Button
                        android:id="@+id/btn_minus"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/standard_margin"
                        android:padding="@dimen/padding_btn"
                        android:text="@string/minus"
                        android:textSize="28sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_1"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/standard_margin"
                        android:backgroundTint="#FAFAFF"
                        android:padding="@dimen/padding_btn"
                        android:text="@string/_1"
                        android:textColor="@color/black"
                        android:textSize="28sp" />

                    <Button
                        android:id="@+id/btn_2"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/standard_margin"
                        android:backgroundTint="#FAFAFF"
                        android:padding="@dimen/padding_btn"
                        android:text="@string/_2"
                        android:textColor="@color/black"
                        android:textSize="28sp" />

                    <Button
                        android:id="@+id/btn_3"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/standard_margin"
                        android:backgroundTint="#FAFAFF"
                        android:padding="@dimen/padding_btn"
                        android:text="@string/_3"
                        android:textColor="@color/black"
                        android:textSize="28sp" />

                    <Button
                        android:id="@+id/btn_plus"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/standard_margin"
                        android:padding="@dimen/padding_btn"
                        android:text="@string/plus"
                        android:textSize="28sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_dot"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/standard_margin"
                        android:padding="@dimen/padding_btn"
                        android:text="@string/dot"
                        android:textSize="28sp" />

                    <Button
                        android:id="@+id/btn_0"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/standard_margin"
                        android:backgroundTint="#FAFAFF"
                        android:padding="@dimen/padding_btn"
                        android:text="@string/_0"
                        android:textColor="@color/black"
                        android:textSize="28sp" />

                    <Button
                        android:id="@+id/btn_brackets"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/standard_margin"
                        android:padding="@dimen/padding_btn"
                        android:text="@string/brackets"
                        android:textSize="28sp" />

                    <Button
                        android:id="@+id/btn_equal"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/standard_margin"
                        android:padding="@dimen/padding_btn"
                        android:text="@string/equal"
                        android:textSize="28sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>